<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Flow.Player.ViewModels.Settings"
             xmlns:models="using:Flow.Player.Services.MediaPlayerService"
             x:DataType="vm:PlaybackViewModel"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="400"
             x:Class="Flow.Player.Views.Settings.Playback">
	<ScrollViewer>
		<StackPanel Spacing="8">
			<TextBlock VerticalAlignment="Center">Output device</TextBlock>
			<ComboBox ItemsSource="{Binding AudioOutputDevices}" SelectedItem="{Binding SelectedDevice}">
				<ComboBox.ItemTemplate>
					<DataTemplate>
						<TextBlock Text="{Binding Name}" />
					</DataTemplate>
				</ComboBox.ItemTemplate>
			</ComboBox>
		</StackPanel>

	</ScrollViewer>
</UserControl>