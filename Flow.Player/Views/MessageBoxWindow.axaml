<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Width="600" MinHeight="96" MaxWidth="600"
        x:Class="Flow.Player.Views.MessageBoxWindow"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        Title="MessageBoxWindow">
	<Border Padding="16">
		<StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center">
			<TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Padding="0 0 0 16" x:Name="Message" TextWrapping="Wrap" />
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" x:Name="DialogButtons" />
		</StackPanel>
	</Border>
</Window>
